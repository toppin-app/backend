<div class="container mt-5">
  <h2 class="text-center mb-4">Versiones de la App</h2>
  <style>
    /* Animación fade-in para las tarjetas */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .fade-in {
      animation: fadeIn 0.8s ease forwards;
    }
  </style>
  <div class="row">
    <!-- Tarjeta Android completa -->
    <div class="col-md-6 fade-in">
      <div class="card text-white bg-success mb-3">
        <div class="card-header">Versión Android</div>
        <div class="card-body">
          <p class="card-text">Última versión: <strong><%= @app_versions.first.android_last_version %></strong></p>
          <p class="card-text">Versión mínima requerida: <strong><%= @app_versions.first.android_last_version_required %></strong></p>
          <p class="card-text">Enlace Android Store: <strong><%= @app_versions.first.android_store_link %></strong></p>
          <%= form_with model: @app_versions.first, url: app_version_path(@app_versions.first), method: :patch, local: true do |f| %>
            <div class="form-group">
              <label for="android_last_version">Editar Última versión Android</label>
              <%= f.text_field :android_last_version, class: "form-control", placeholder: "Editar versión Android" %>
            </div>
            <div class="form-group">
              <label for="android_last_version_required">Editar Versión mínima requerida Android</label>
              <%= f.text_field :android_last_version_required, class: "form-control", placeholder: "Editar versión requerida" %>
            </div>
            <div class="form-group">
              <label for="android_store_link">Editar Enlace Android Store</label>
              <%= f.text_field :android_store_link, class: "form-control", placeholder: "Editar enlace Android Store" %>
            </div>
            <%= f.submit "Guardar", class: "btn btn-light btn-sm mt-2" %>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Tarjeta iOS completa -->
    <div class="col-md-6 fade-in">
      <div class="card text-white bg-secondary mb-3">
        <div class="card-header">Versión iOS</div>
        <div class="card-body">
          <p class="card-text">Última versión: <strong><%= @app_versions.first.ios_last_version %></strong></p>
          <p class="card-text">Versión mínima requerida: <strong><%= @app_versions.first.ios_last_version_required %></strong></p>
          <p class="card-text">Enlace iOS Store: <strong><%= @app_versions.first.ios_store_link %></strong></p>
          <%= form_with model: @app_versions.first, url: app_version_path(@app_versions.first), method: :patch, local: true do |f| %>
            <div class="form-group">
              <label for="ios_last_version">Editar Última versión iOS</label>
              <%= f.text_field :ios_last_version, class: "form-control", placeholder: "Editar versión iOS" %>
            </div>
            <div class="form-group">
              <label for="ios_last_version_required">Editar Versión mínima requerida iOS</label>
              <%= f.text_field :ios_last_version_required, class: "form-control", placeholder: "Editar versión requerida" %>
            </div>
            <div class="form-group">
              <label for="ios_store_link">Editar Enlace iOS Store</label>
              <%= f.text_field :ios_store_link, class: "form-control", placeholder: "Editar enlace iOS Store" %>
            </div>
            <%= f.submit "Guardar", class: "btn btn-light btn-sm mt-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>