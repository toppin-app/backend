<div class="container mt-5">
  <h2 class="text-center mb-4">Versiones de la App</h2>
  <div class="row">
    <div class="col-md-6 android-block">
      <h3 class="text-center mb-3 block-title-android">Android</h3>
      <div class="card text-white bg-primary mb-3">
        <div class="card-header">Versión Android</div>
        <div class="card-body">
          <p class="card-text">Última versión: <strong><%= @app_versions.first.android_last_version %></strong></p>
          <%= form_with model: @app_versions.first, url: app_version_path(@app_versions.first), method: :patch, local: true do |f| %>
            <div class="form-group">
              <%= f.text_field :android_last_version, class: "form-control", placeholder: "Editar versión Android" %>
            </div>
            <%= f.submit "Guardar", class: "btn btn-light btn-sm" %>
          <% end %>
        </div>
      </div>
      <div class="card text-white bg-success mb-3">
        <div class="card-header">Versión Android Requerida</div>
        <div class="card-body">
          <p class="card-text">Versión mínima: <strong><%= @app_versions.first.android_last_version_required %></strong></p>
          <%= form_with model: @app_versions.first, url: app_version_path(@app_versions.first), method: :patch, local: true do |f| %>
            <div class="form-group">
              <%= f.text_field :android_last_version_required, class: "form-control", placeholder: "Editar versión requerida" %>
            </div>
            <%= f.submit "Guardar", class: "btn btn-light btn-sm" %>
          <% end %>
        </div>
      </div>
      <div class="card text-white bg-dark mb-3">
        <div class="card-header">Enlace Android Store</div>
        <div class="card-body">
          <p class="card-text">Enlace: <strong><%= @app_versions.first.android_store_link %></strong></p>
          <%= form_with model: @app_versions.first, url: app_version_path(@app_versions.first), method: :patch, local: true do |f| %>
            <div class="form-group">
              <%= f.text_field :android_store_link, class: "form-control", placeholder: "Editar enlace Android Store" %>
            </div>
            <%= f.submit "Guardar", class: "btn btn-light btn-sm" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-6 ios-block">
      <h3 class="text-center mb-3 block-title-ios">iOS</h3>
      <div class="card text-white bg-info mb-3">
        <div class="card-header">Versión iOS</div>
        <div class="card-body">
          <p class="card-text">Última versión: <strong><%= @app_versions.first.ios_last_version %></strong></p>
          <%= form_with model: @app_versions.first, url: app_version_path(@app_versions.first), method: :patch, local: true do |f| %>
            <div class="form-group">
              <%= f.text_field :ios_last_version, class: "form-control", placeholder: "Editar versión iOS" %>
            </div>
            <%= f.submit "Guardar", class: "btn btn-light btn-sm" %>
          <% end %>
        </div>
      </div>
      <div class="card text-white bg-warning mb-3">
        <div class="card-header">Versión iOS Requerida</div>
        <div class="card-body">
          <p class="card-text">Versión mínima: <strong><%= @app_versions.first.ios_last_version_required %></strong></p>
          <%= form_with model: @app_versions.first, url: app_version_path(@app_versions.first), method: :patch, local: true do |f| %>
            <div class="form-group">
              <%= f.text_field :ios_last_version_required, class: "form-control", placeholder: "Editar versión requerida" %>
            </div>
            <%= f.submit "Guardar", class: "btn btn-light btn-sm" %>
          <% end %>
        </div>
      </div>
      <div class="card text-white bg-secondary mb-3">
        <div class="card-header">Enlace iOS Store</div>
        <div class="card-body">
          <p class="card-text">Enlace: <strong><%= @app_versions.first.ios_store_link %></strong></p>
          <%= form_with model: @app_versions.first, url: app_version_path(@app_versions.first), method: :patch, local: true do |f| %>
            <div class="form-group">
              <%= f.text_field :ios_store_link, class: "form-control", placeholder: "Editar enlace iOS Store" %>
            </div>
            <%= f.submit "Guardar", class: "btn btn-light btn-sm" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .android-block {
    background-color: #D4EDDA;
    padding: 20px;
    border-radius: 0.3rem;
    margin-bottom: 1rem;
  }
  .ios-block {
    background-color: #E9ECEF;
    padding: 20px;
    border-radius: 0.3rem;
    margin-bottom: 1rem;
  }
  .block-title-android {
    color: #155724;
  }
  .block-title-ios {
    color: #383D41;
  }
  .android-block .card,
  .ios-block .card {
    width: 100%;
  }
</style>