<h1>Editar versión de la aplicación</h1>

<%= form_with(model: @app_version, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :android_last_version, "Android Última Versión" %>
    <%= form.text_field :android_last_version, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :android_last_version_required, "Android Versión Requerida" %>
    <%= form.text_field :android_last_version_required, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :ios_last_version, "iOS Última Versión" %>
    <%= form.text_field :ios_last_version, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :ios_last_version_required, "iOS Versión Requerida" %>
    <%= form.text_field :ios_last_version_required, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :android_store_link, "Enlace a la tienda Android" %>
    <%= form.text_field :android_store_link, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :ios_store_link, "Enlace a la tienda iOS" %>
    <%= form.text_field :ios_store_link, class: 'form-control' %>
  </div>

  <%= form.submit "Guardar cambios", class: 'btn btn-success' %>
<% end %>

<%= link_to 'Volver', app_versions_path, class: 'btn btn-secondary' %>