
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interest_category.interests.each do |interest| %>
      <tr>
        <td><%= interest.name %></td>
        <td><%= link_to 'Editar', edit_interest_path(interest) %></td>
        <td><%= link_to 'Eliminar', interest, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


