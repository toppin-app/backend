<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header bg-white">
        <h3 class="mb-0"><%= @banner.title %></h3>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-sm-3">
            <strong>Descripción:</strong>
          </div>
          <div class="col-sm-9">
            <%= @banner.description.presence || '<em class="text-muted">Sin descripción</em>'.html_safe %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-3">
            <strong>URL:</strong>
          </div>
          <div class="col-sm-9">
            <% if @banner.url.present? %>
              <%= link_to @banner.url, @banner.url, target: '_blank', class: 'text-primary' %>
              <i class="fas fa-external-link-alt ml-1 text-muted" style="font-size: 12px;"></i>
            <% else %>
              <em class="text-muted">Sin URL</em>
            <% end %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-3">
            <strong>Estado:</strong>
          </div>
          <div class="col-sm-9">
            <% if @banner.active? %>
              <span class="badge badge-success">Activo</span>
            <% else %>
              <span class="badge badge-secondary">Inactivo</span>
            <% end %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-3">
            <strong>Fecha de inicio:</strong>
          </div>
          <div class="col-sm-9">
            <%= @banner.start_date&.strftime("%d-%m-%Y %H:%M") || '<em class="text-muted">Sin límite</em>'.html_safe %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-3">
            <strong>Fecha de fin:</strong>
          </div>
          <div class="col-sm-9">
            <%= @banner.end_date&.strftime("%d-%m-%Y %H:%M") || '<em class="text-muted">Sin límite</em>'.html_safe %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-3">
            <strong>Visualizaciones:</strong>
          </div>
          <div class="col-sm-9">
            <span class="badge badge-info"><%= @banner.banner_users.count %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-header bg-white">
        <h5 class="mb-0">Vista previa</h5>
      </div>
      <div class="card-body text-center">
        <% if @banner.image? %>
          <%= image_tag @banner.image.url, class: 'img-fluid rounded', style: 'max-height: 300px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);' %>
        <% else %>
          <i class="fas fa-image" style="font-size: 80px; color: #ccc;"></i>
          <p class="text-muted mt-2">No hay imagen</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="mt-4">
  <%= link_to edit_banner_path(@banner), class: 'btn btn-primary text-white', style: 'color: white !important;', :"data-turbolinks" => false do %>
    <i class="fas fa-edit"></i> Editar
  <% end %>
  <%= link_to banners_path, class: 'btn btn-secondary text-white ml-2', style: 'color: white !important;' do %>
    <i class="fas fa-arrow-left"></i> Atrás
  <% end %>
</div>