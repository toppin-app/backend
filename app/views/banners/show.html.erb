<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <div class="mb-4">
          <p class="mb-2"><strong>Título:</strong></p>
          <h4 class="card-title mb-0"><%= @banner.title %></h4>
        </div>
        
        <div class="mb-4">
          <p class="mb-2"><strong>Descripción:</strong></p>
          <p class="mb-0"><%= @banner.description %></p>
        </div>

        <div class="mb-4">
          <p class="mb-2"><strong>URL:</strong></p>
          <p class="mb-0"><%= link_to @banner.url, @banner.url, target: '_blank' if @banner.url.present? %></p>
        </div>

        <div class="mb-4">
          <p class="mb-2"><strong>Estado:</strong></p>
          <p class="mb-0">
            <% if @banner.active? %>
              <span class="badge badge-success">Activo</span>
            <% else %>
              <span class="badge badge-secondary">Inactivo</span>
            <% end %>
          </p>
        </div>

        <div class="mb-4">
          <p class="mb-2"><strong>Fecha de inicio:</strong></p>
          <p class="mb-0"><%= @banner.start_date&.strftime("%d-%m-%Y %H:%M") || "Sin límite" %></p>
        </div>

        <div class="mb-4">
          <p class="mb-2"><strong>Fecha de fin:</strong></p>
          <p class="mb-0"><%= @banner.end_date&.strftime("%d-%m-%Y %H:%M") || "Sin límite" %></p>
        </div>

        <div class="mb-0">
          <p class="mb-2"><strong>Total de visualizaciones:</strong></p>
          <p class="mb-0"><%= @banner.banner_users.count %></p>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5>Vista previa</h5>
      </div>
      <div class="card-body text-center">
        <% if @banner.image? %>
          <%= image_tag @banner.image.url, class: 'img-fluid', style: 'max-height: 300px;' %>
        <% else %>
          <i class="fas fa-image" style="font-size: 80px; color: #ccc;"></i>
          <p class="text-muted">No hay imagen</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <%= link_to 'Editar', edit_banner_path(@banner), class: 'btn btn-primary text-white', style: 'color: white !important;', :"data-turbolinks" => false  %> |
  <%= link_to 'Atrás', banners_path, class: 'btn btn-secondary text-white', style: 'color: white !important;' %>
</div>