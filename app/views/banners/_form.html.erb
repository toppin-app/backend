<%= form_with(model: banner, local: true) do |form| %>
  <% if banner.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(banner.errors.count, "error") %> impidieron que el banner se guardara:</h4>
      <ul>
        <% banner.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :title, 'Título *' %>
            <%= form.text_field :title, class: 'form-control', required: true %>
          </div>

          <div class="form-group">
            <%= form.label :description, 'Descripción' %>
            <%= form.text_area :description, class: 'form-control', rows: 3 %>
          </div>

          <div class="form-group">
            <%= form.label :image_url, 'URL de la imagen *' %>
            <%= form.url_field :image_url, class: 'form-control', required: true, placeholder: 'https://ejemplo.com/imagen.jpg' %>
            <small class="form-text text-muted">URL completa de la imagen del banner</small>
          </div>

          <div class="form-group">
            <%= form.label :url, 'URL de destino *' %>
            <%= form.url_field :url, class: 'form-control', required: true, placeholder: 'https://ejemplo.com' %>
            <small class="form-text text-muted">URL a la que redirigirá cuando se haga click</small>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <div class="form-check">
              <%= form.check_box :active, class: 'form-check-input' %>
              <%= form.label :active, 'Banner activo', class: 'form-check-label' %>
            </div>
          </div>

          <div class="form-group">
            <%= form.label :start_date, 'Fecha de inicio' %>
            <%= form.datetime_local_field :start_date, class: 'form-control' %>
            <small class="form-text text-muted">Dejar vacío para sin límite de inicio</small>
          </div>

          <div class="form-group">
            <%= form.label :end_date, 'Fecha de fin' %>
            <%= form.datetime_local_field :end_date, class: 'form-control' %>
            <small class="form-text text-muted">Dejar vacío para sin límite de fin</small>
          </div>

          <% if banner.image_url.present? %>
            <div class="form-group">
              <label>Vista previa:</label><br>
              <div id="image-preview-container">
                <%= image_tag banner.image_url, class: 'img-thumbnail', style: 'max-height: 150px;', id: 'image-preview' rescue content_tag(:p, 'Error cargando imagen', class: 'text-danger') %>
              </div>
            </div>
          <% else %>
            <div class="form-group">
              <label>Vista previa:</label><br>
              <div id="image-preview-container">
                <p class="text-muted">Introduce una URL para ver la vista previa</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="actions mt-3">
    <%= form.submit 'Guardar Banner', class: 'btn btn-success' %>
    <%= link_to 'Cancelar', banners_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

<script>
  // Vista previa de imagen
  document.addEventListener('DOMContentLoaded', function() {
    const imageUrlField = document.getElementById('banner_image_url');
    const previewContainer = document.getElementById('image-preview-container');
    
    if (imageUrlField) {
      imageUrlField.addEventListener('input', function(e) {
        const url = e.target.value;
        
        if (url) {
          // Limpiar contenedor
          previewContainer.innerHTML = '';
          
          // Crear nueva imagen
          const img = document.createElement('img');
          img.src = url;
          img.className = 'img-thumbnail';
          img.style.maxHeight = '150px';
          img.id = 'image-preview';
          
          // Manejar error de carga
          img.onerror = function() {
            previewContainer.innerHTML = '<p class="text-danger">Error cargando imagen</p>';
          };
          
          previewContainer.appendChild(img);
        } else {
          previewContainer.innerHTML = '<p class="text-muted">Introduce una URL para ver la vista previa</p>';
        }
      });
    }
  });
</script>