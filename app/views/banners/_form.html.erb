<%= form_with(model: banner, local: true, multipart: true) do |form| %>
  <% if banner.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(banner.errors.count, "error") %> impidieron que el banner se guardara:</h4>
      <ul>
        <% banner.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Recomendaciones de diseño óptimo -->
  <div class="alert alert-info" role="alert">
    <h5 class="alert-heading"><i class="fas fa-lightbulb"></i> Recomendaciones de Diseño Óptimo</h5>
    <hr>
    <div class="row">
      <div class="col-md-6">
        <p class="mb-2"><strong>Tamaño óptimo:</strong></p>
        <ul class="mb-3">
          <li>350 x 100 píxeles</li>
          <li>700 x 200 píxeles</li>
        </ul>
        <p class="mb-2"><strong>Aspect Ratio:</strong> 3.5:1 (7:2)</p>
      </div>
      <div class="col-md-6">
        <p class="mb-2"><strong>Área Segura:</strong></p>
        <ul class="mb-3">
          <li>Dejar 10-15px de margen interno en todos los lados</li>
          <li>Evitar texto o elementos importantes en los bordes</li>
          <li>El sistema aplica automáticamente border-radius</li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <p class="mb-2"><strong>Composición Visual:</strong></p>
        <ul class="mb-0">
          <li>Modo de visualización: <code>cover</code> (la imagen se recorta para llenar el contenedor)</li>
          <li>Centrar elementos importantes vertical y horizontalmente</li>
          <li>Evitar información crítica en los extremos horizontales</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <div class="mb-3" style="display: block !important; visibility: visible !important;">
            <%= form.label :title, 'Título *', class: 'form-label', style: 'display: block !important; font-weight: bold; margin-bottom: 8px;' %>
            <%= form.text_field :title, class: 'form-control', required: true, style: 'display: block !important; width: 100% !important; height: 38px !important;' %>
          </div>

          <div class="mb-3">
            <%= form.label :description, 'Descripción', class: 'form-label' %>
            <%= form.text_area :description, class: 'form-control', rows: 3 %>
          </div>

          <div class="mb-3">
            <%= form.label :image, 'Imagen del banner *', class: 'form-label' %>
            <%= form.file_field :image, class: 'form-control', accept: 'image/*', required: banner.new_record? %>
            <small class="form-text text-muted">Formatos aceptados: JPG, PNG, GIF</small>
          </div>

          <div class="mb-3">
            <%= form.label :url, 'URL de destino *', class: 'form-label' %>
            <%= form.url_field :url, class: 'form-control', required: true, placeholder: 'https://ejemplo.com' %>
            <small class="form-text text-muted">URL a la que redirigirá cuando se haga click</small>
          </div>
        </div>

        <div class="col-md-6">
          <div class="mb-3">
            <div class="form-check">
              <%= form.check_box :active, class: 'form-check-input' %>
              <%= form.label :active, 'Banner activo', class: 'form-check-label' %>
            </div>
          </div>

          <div class="mb-3">
            <%= form.label :start_date, 'Fecha de inicio', class: 'form-label' %>
            <%= form.datetime_local_field :start_date, class: 'form-control' %>
            <small class="form-text text-muted">Dejar vacío para sin límite de inicio</small>
          </div>

          <div class="mb-3">
            <%= form.label :end_date, 'Fecha de fin', class: 'form-label' %>
            <%= form.datetime_local_field :end_date, class: 'form-control' %>
            <small class="form-text text-muted">Dejar vacío para sin límite de fin</small>
          </div>

          <% if banner.image? %>
            <div class="mb-3">
              <label class="form-label">Vista previa actual:</label><br>
              <%= image_tag banner.image.thumb.url, class: 'img-thumbnail', style: 'max-height: 150px;' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="actions mt-3">
    <%= form.submit 'Guardar Banner', class: 'btn btn-success text-white' %>
    <%= link_to 'Cancelar', banners_path, class: 'btn btn-secondary text-white' %>
  </div>
<% end %>