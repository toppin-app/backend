

<%= link_to 'Nuevo interés', new_interest_path, class: 'btn btn-success btn-sm text-white' %>
<hr>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interests.each do |interest| %>
      <tr>
        <td><%= interest.name %></td>
        <td><%= link_to 'Editar', edit_interest_path(interest) %></td>
        <td><%= link_to 'Eliminar', interest, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center mt-4">
  <%= will_paginate @interests, previous_label: '← Anterior', next_label: 'Siguiente →' %>
</div>